<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gallery.celkon.celkongallery">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".activity.helpercomponent.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.activity.ActivityHome"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.activity.AlbumActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNew" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.activity.PhotoPreviewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNew" >
        </activity>
    </application>

</manifest>